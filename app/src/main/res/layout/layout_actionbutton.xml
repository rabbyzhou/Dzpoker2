<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="500dp"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seek_text"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:layout_above="@+id/game_action_raise_seekbar"
        android:layout_centerHorizontal="true"
        android:text="100"/>


    <SeekBar
        android:id="@+id/game_action_raise_seekbar"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-90dp"
        android:max="10"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:progress="0"
        android:rotation="270"
        android:layout_above="@+id/game_action_button_layout"
        android:progressDrawable="@drawable/custom_seekbar_layer"
        android:thumb="@drawable/custom_seekbar_shape"

        />

    <LinearLayout
        android:id="@+id/game_action_button_layout"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


    <RelativeLayout
