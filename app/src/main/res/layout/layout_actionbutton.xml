            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/little_raise_1"
            android:gravity="center"
            android:text="2倍大盲"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/game_action_double"
            android:layout_alignRight="@id/game_action_double"
            android:layout_below="@id/game_action_double"
            android:gravity="center"
            android:text="4"
            android:layout_marginTop="-10dp"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/game_action_triple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/little_raise_1"
            android:gravity="center"
            android:text="3倍大盲"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/game_action_triple"
            android:layout_alignRight="@id/game_action_triple"
            android:layout_below="@id/game_action_triple"
            android:gravity="center"
            android:text="6"
            android:layout_marginTop="-10dp"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/game_action_quadruple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/little_raise_1"
            android:gravity="center"
            android:text="4倍大盲"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/game_action_quadruple"
            android:layout_alignRight="@id/game_action_quadruple"
            android:layout_below="@id/game_action_quadruple"
            android:gravity="center"
            android:layout_marginTop="-10dp"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="10dp" />

