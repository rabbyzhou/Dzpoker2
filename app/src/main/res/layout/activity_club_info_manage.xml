<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#003366"
        >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/exit"
            android:drawablePadding="2dp"
            android:text="返回"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"/>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="俱乐部设置"
            android:textSize="24dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageView
        android:layout_marginTop="20px"
        android:id="@+id/iv_club_head"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/default_club_head"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingLeft="20px"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="俱乐部名称"
            android:textSize="18dp"

            />
        <EditText
            android:id="@+id/et_club_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:gravity="left"
            />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_marginLeft="200px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改俱乐部名称将会花费40钻石，当前账户钻石数："
            android:textSize="8dp"

            />
        <TextView
            android:id="@+id/tv_user_diamonds"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            android:textSize="8dp"
            android:textColor="@color/green"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingLeft="20px"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="所在地"
            android:textSize="18dp"

            />
        <EditText
            android:id="@+id/et_club_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:drawableRight="@drawable/arrow_right"
            android:focusable="false"
            android:gravity="left"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_gravity="center_vertical"
            android:paddingLeft="20px"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="俱乐部简介"
            android:textSize="18dp"

            />
        <EditText
            android:id="@+id/et_club_abstract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:inputType="textMultiLine"
            android:gravity="left|top"
            android:minLines="4"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"

        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_width="match_parent"

        android:layout_height="80px"
        android:layout_gravity="center"
        android:background="@drawable/denglu_normal"
        android:layout_marginTop="50px"
        android:text="保存" />

</LinearLayout>