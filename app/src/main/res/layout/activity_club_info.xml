<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#003366"
        android:visibility="gone"
        >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/black_back"
            android:drawablePadding="2dp"
            android:text="返回"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"/>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="俱乐部信息"
            android:textSize="24dp"
            android:layout_centerInParent="true"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_disband_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解散"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="340px"
                android:background="@drawable/background"
                android:orientation="vertical"
                >
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginTop="20px"
                    android:id="@+id/iv_club_head"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:src="@drawable/default_club_head"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_marginTop="20px"
                    android:id="@+id/tv_club_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="俱乐部名称"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_marginTop="10px"
                    android:id="@+id/tv_club_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="江苏常州"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>


            <!-- 俱乐部会长  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/black"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会长"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20px"/>

                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginLeft="40px"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:id="@+id/iv_club_creator_head"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/default_male_head"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_club_creator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建者"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20px"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_club_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2px"
                android:background="@color/black"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="俱乐部等级"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20px"/>


                <TextView
                    android:id="@+id/tv_club_leavel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="初级俱乐部"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:drawableRight="@drawable/arrow_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2px"
                android:background="@color/gray"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                >
                <TextView
                    android:id="@+id/tv_club_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="会员 100/100"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"/>
                <TextView
                    android:id="@+id/tv_club_member_manage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20px"
                    android:text="会员管理"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"/>

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:paddingLeft="20px"
                android:id="@+id/rv_club_user_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:overScrollMode="never"
                android:scrollbars="none"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2px"
                android:background="@color/black"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="介绍"
                    android:textSize="18dp"
                  />
                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="创建于2016年10月1日"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/tv_club_descript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无简介"
                    android:textSize="14dp"
                    android:layout_marginTop="40px"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2px"
                android:background="@color/black"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新消息通知"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    />
                <com.yijian.dzpoker.ui.SwitchButton
                     android:layout_marginRight="20px"
                     android:id="@+id/sb_message_notice"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">

                 </com.yijian.dzpoker.ui.SwitchButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2px"
                android:background="@color/black"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                >
                <TextView
                    android:id="@+id/tv_clear_chatmessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清空聊天记录"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/arrow_right"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_leave_club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20px"
                android:background="@color/black"
                android:paddingTop="10px"
                android:paddingBottom="10px"

                >
                <TextView
                    android:id="@+id/tv_leave_club"
                    android:paddingBottom="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出俱乐部"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>