<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg_secondary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:visibility="gone"
        android:background="#003366"
        >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/black_back"
            android:drawablePadding="2dp"
            android:text="返回"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:textSize="24dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        >
        <TextView
            android:paddingLeft="20px"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="游戏音效"
            android:textSize="24dp"
            android:layout_weight="1"

            />
        <com.yijian.dzpoker.ui.SwitchButton
            android:layout_marginRight="20px"
            android:id="@+id/sb_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.yijian.dzpoker.ui.SwitchButton>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        >
        <TextView
            android:paddingLeft="20px"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="消息声音"
            android:textSize="24dp"
            android:layout_weight="1"

            />
        <com.yijian.dzpoker.ui.SwitchButton
            android:layout_marginRight="20px"
            android:id="@+id/sb_msg_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.yijian.dzpoker.ui.SwitchButton>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        >
        <TextView
            android:paddingLeft="20px"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="消息震动"
            android:textSize="24dp"
            android:layout_weight="1"

            />
        <com.yijian.dzpoker.ui.SwitchButton
            android:layout_marginRight="20px"
            android:id="@+id/sb_msg_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.yijian.dzpoker.ui.SwitchButton>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        >
        <TextView
            android:paddingLeft="20px"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="隐藏俱乐部信息"
            android:textSize="24dp"
            android:layout_weight="1"

            />
        <com.yijian.dzpoker.ui.SwitchButton
            android:layout_marginRight="20px"
            android:id="@+id/sb_hide_club_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.yijian.dzpoker.ui.SwitchButton>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal"
        android:background="@color/gray"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        >
        <TextView
            android:paddingLeft="20px"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="当前版本"
            android:textSize="24dp"
            android:layout_weight="1"


            />
        <TextView
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V1.0"
            android:textSize="24dp"


            />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_changePWD"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textSize="24dp"
        android:drawableRight="@drawable/arrow_right"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"

        />

    <TextView
        android:id="@+id/tv_about"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于我们"
        android:textSize="24dp"
        android:drawableRight="@drawable/arrow_right"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        android:background="@color/black"
        android:paddingTop="10px"
        android:paddingBottom="10px"

        >
        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            />
    </LinearLayout>



</LinearLayout>