<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >

    <LinearLayout
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/index"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text = "1"
            android:background="@drawable/game_range_bg"/>

        <ImageView
            android:id="@+id/ranking_headpic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/default_male_head"/>

        <TextView
            android:id="@+id/ranking_nickname"
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/game_record_text_small_size"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text = "111111"/>

    </LinearLayout>

    <TextView
        android:id="@+id/takeinchips"
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="400"
        android:textSize="@dimen/game_record_text_small_size" />

    <TextView
        android:id="@+id/allhands"
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="400"
        android:textSize="@dimen/game_record_text_small_size" />

    <TextView
        android:id="@+id/winchips"
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:text="400"
        android:textSize="@dimen/game_record_text_small_size" />

</LinearLayout>