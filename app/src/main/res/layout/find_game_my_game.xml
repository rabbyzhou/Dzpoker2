<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_game_item_root_layout"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@color/main_bg">

    <com.yijian.dzpoker.baselib.widget.CustomCircleImageView
        android:id="@+id/game_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_female_head"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/table_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/game_icon"
        android:layout_alignTop="@id/game_icon"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:text="aaa"/>

    <TextView
        android:id="@+id/table_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/table_name"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:text="Texas"
        android:layout_alignTop="@id/table_name"/>
    
    <ImageView
        android:id="@+id/people_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignLeft="@id/table_name"
        android:layout_alignBottom="@id/game_icon"
        android:src="@drawable/peoples_icon"/>
    <TextView
        android:id="@+id/table_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/people_icon"
        android:layout_alignBottom="@id/people_icon"
        android:layout_marginHorizontal="3dp"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:text="2/10"/>


    <ImageView
    android:id="@+id/time_icon"
    android:layout_width="18dp"
    android:layout_height="18dp"
    android:layout_toRightOf="@id/table_members"
    android:layout_alignBottom="@id/game_icon"
    android:layout_marginLeft="30dp"
    android:src="@drawable/time_ico"/>
    <TextView
        android:id="@+id/table_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/time_icon"
        android:layout_alignBottom="@id/time_icon"
        android:layout_marginHorizontal="3dp"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:text="2/10"/>

    <ImageView
        android:id="@+id/card_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_toRightOf="@id/table_time"
        android:layout_alignBottom="@id/game_icon"
        android:layout_marginLeft="30dp"
        android:src="@drawable/brand_ico"/>
    <TextView
        android:id="@+id/table_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/card_icon"
        android:layout_alignBottom="@id/card_icon"
        android:layout_marginHorizontal="3dp"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:text="2/10"/>

    <TextView
        android:id="@+id/table_time_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/is_participated"
        android:layout_marginHorizontal="3dp"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:text="30min"/>

    <TextView
        android:id="@+id/is_participated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="3dp"
        android:textSize="14dp"
        android:textColor="@color/red"
        android:text="参与过"/>


</RelativeLayout>