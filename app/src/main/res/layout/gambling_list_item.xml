<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/gambling_list_item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:textSize="12dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:gravity="left|center_vertical"
        android:text="Texas SNG" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/gambling_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:gravity="left|center_vertical"
            android:text="Texas SNG" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="60dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/peoples_icon"
                android:scaleType="centerInside"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/gambling_list_item_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:gravity="left|center_vertical"
                android:text="Texas SNG"/>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/time_ico"
                android:scaleType="centerInside"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/gambling_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="left|center_vertical"
                android:text="1"/>

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/brand_ico"
                android:scaleType="centerInside"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/gambling_list_item_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="left|center_vertical"
                android:text="200"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>